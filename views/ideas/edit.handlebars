{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="card card-body">
    <h3 class="m-3">Edit Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
        <div class="form-group m-3">
            <label for="title">Title</label>
            <input type="text" value="{{idea.title}}" class="form-control" name="title" required>
        </div>
        <div class="form-group m-3">
            <label for="details">Details</label>
            <textarea class="form-control" name="details" required>{{idea.details}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary m-3">Submit</button>
    </form>
</div>