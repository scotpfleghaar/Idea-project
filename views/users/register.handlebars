<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center m-3">Account Register</h3>
            <form action="/users/register" method="post">
                <div class="form-group m-3">
                    <label for="name">Name</label>
                    <input type="text" class=" form-control" value="{{name}}" name="name" required>
                </div>
                <div class="form-group m-3">
                    <label for="email">Email</label>
                    <input type="email" class=" form-control" value="{{email}}" name="email" required>
                </div>
                <div class="form-group m-3">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" value="{{password}}" required>
                </div>
                <div class="form-group m-3">
                    <label for="password">Confirm Password</label>
                    <input type="password" class="form-control" name="password2" value="{{password2}}" required>
                </div>
                <button type="submit" class="btn btn-info m-3">Submit</button>
            </form>
        </div>
    </div>
</div>